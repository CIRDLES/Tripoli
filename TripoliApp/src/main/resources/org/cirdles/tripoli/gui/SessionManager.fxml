<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:id="sessionGridPane" hgap="15.0" minHeight="660.0" minWidth="1250.0" prefHeight="660.0"
          prefWidth="1250.0" style="-fx-background-color: LINEN;" vgap="10.0"
          xmlns="http://javafx.com/javafx/20.0.1" fx:controller="org.cirdles.tripoli.gui.SessionManagerController">
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" hgrow="NEVER" percentWidth="10.0"/>
        <ColumnConstraints fx:id="columnTwoConstraints" hgrow="ALWAYS" percentWidth="90.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints fillHeight="false" maxHeight="5.0" minHeight="5.0" prefHeight="5.0" vgrow="NEVER"/>
        <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES"/>
        <RowConstraints fillHeight="false" maxHeight="35.0" minHeight="35.0" prefHeight="35.0" valignment="TOP"
                        vgrow="SOMETIMES"/>
        <RowConstraints maxHeight="180.0" minHeight="180.0" percentHeight="86.0" prefHeight="180.0" valignment="TOP"
                        vgrow="SOMETIMES"/>
    </rowConstraints>
    <padding>
        <Insets bottom="15.0" left="20.0" right="20.0" top="1.0"/>
    </padding>
    <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <TextField fx:id="sessionNameText" prefHeight="31.0" prefWidth="489.0" promptText="Please provide session name"
                   HBox.hgrow="ALWAYS"/>
        <Label style="-fx-text-fill: #3c77c9; -fx-font-weight: bold;" text="Analyst Name:"/>
        <TextField fx:id="analystNameText" prefHeight="30.0" prefWidth="405.0" promptText="Please provide analyst name"
                   HBox.hgrow="ALWAYS"/>
    </HBox>
    <Label style="-fx-text-fill: #3c77c9; -fx-font-weight: bold;" text="Session Name:" GridPane.rowIndex="1"/>
    <Label style="-fx-text-fill: #3c77c9; -fx-font-weight: bold;" text="Session File:" GridPane.rowIndex="2"/>
    <TextField fx:id="sessionFilePathAsStringText" editable="false" prefHeight="31.0" prefWidth="1075.0"
               promptText="name and location of session '.tripoli' file will appear here"
               style="-fx-font-family: SansSerif; -fx-font-size: 13;" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <VBox alignment="TOP_RIGHT" GridPane.rowIndex="4">
        <Label style="-fx-text-fill: #3c77c9; -fx-font-weight: bold;" text="Session Analyses:"/>
        <Pane prefHeight="339.0" prefWidth="120.0">
            <children>
                <Button fx:id="concatenateButton" disable="false" graphicTextGap="0.0" layoutY="99.0"
                        mnemonicParsing="false" onAction="#concatenationAction" prefHeight="108.0" prefWidth="120.0"
                        style="-fx-text-fill: red; -fx-border-color: black; -fx-border-radius: 10; -fx-border-width: 2; -fx-background-color: white; -fx-background-radius: 10;"
                        text="Concatenate two or more analyses with same method (use case 1)." textAlignment="CENTER"
                        wrapText="true">
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Button>
            </children>
        </Pane>
    </VBox>
    <Label style="-fx-text-fill: #3c77c9; -fx-font-weight: bold;" text="Notes:" GridPane.rowIndex="3"/>
    <TextArea fx:id="sessionNotesText" prefHeight="3.0" prefWidth="1075.0" promptText="Type here" wrapText="true"
              GridPane.columnIndex="1" GridPane.rowIndex="3"/>
    <ListView fx:id="listViewOfAnalyses" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
</GridPane>
