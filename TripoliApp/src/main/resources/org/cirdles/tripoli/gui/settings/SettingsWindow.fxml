<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<VBox fx:id="vBoxRoot" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cirdles.tripoli.gui.settings.SettingsWindowController">
   <children>
      <TabPane fx:id="plotRatiosTabPane" prefHeight="453.0" prefWidth="414.0">
         <tabs>
            <Tab text="Plot Ratios Color Control">
               <content>
                  <AnchorPane fx:id="ratioColorSelectionAnchorPane" prefHeight="200.0" prefWidth="200.0" />
               </content>
            </Tab>
         </tabs>
      </TabPane>
      <ToolBar fx:id="settingsWindowToolbar">
         <items>
            <Button fx:id="okButton" mnemonicParsing="false" text="OK" textFill="#a45151">
               <font>
                  <Font name="Monospaced Bold" size="12.0" />
               </font>
            </Button>
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#1f93ff00" height="26.0" stroke="TRANSPARENT" strokeType="INSIDE" width="9.0" />
            <Button fx:id="revertToSavedButton" mnemonicParsing="false" text="Revert to Saved" textFill="#a45151">
               <font>
                  <Font name="Monospaced Bold" size="12.0" />
               </font>
            </Button>
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#1f93ff00" height="26.0" stroke="TRANSPARENT" strokeType="INSIDE" width="9.0" />
            <Button fx:id="restoreDefaultsButton" mnemonicParsing="false" text="Restore Defaults" textFill="#a45151">
               <font>
                  <Font name="Monospaced Bold" size="12.0" />
               </font>
            </Button>
            <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#1f93ff00" height="26.0" stroke="TRANSPARENT" strokeType="INSIDE" width="9.0" />
            <Button fx:id="cancelButton" mnemonicParsing="false" text="Cancel" textFill="#a45151">
               <font>
                  <Font name="Monospaced Bold" size="12.0" />
               </font>
            </Button>
         </items>
      </ToolBar>
   </children>
</VBox>
