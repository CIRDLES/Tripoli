<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="725.0" prefWidth="1250.0" xmlns="http://javafx.com/javafx/17"
      fx:controller="org.cirdles.tripoli.gui.TripoliGUIController">
    <MenuBar prefHeight="17.0" prefWidth="1234.0" VBox.vgrow="NEVER">
        <menus>
            <Menu mnemonicParsing="false" text="Session">
                <items>
                    <MenuItem mnemonicParsing="false" text="Manage Session"/>
                    <SeparatorMenuItem mnemonicParsing="false"/>
                    <MenuItem mnemonicParsing="false" text="New Session"/>
                    <SeparatorMenuItem mnemonicParsing="false"/>
                    <MenuItem mnemonicParsing="false" text="Open Session"/>
                    <MenuItem mnemonicParsing="false" text="Open Recent Session"/>
                    <MenuItem mnemonicParsing="false" text="Open Demonstration Session"/>
                    <SeparatorMenuItem mnemonicParsing="false"/>
                    <MenuItem mnemonicParsing="false" text="Save  Session"/>
                    <MenuItem mnemonicParsing="false" text="Save  Session as ..."/>
                    <SeparatorMenuItem mnemonicParsing="false"/>
                    <MenuItem mnemonicParsing="false" text="Close  Session"/>
                    <SeparatorMenuItem mnemonicParsing="false"/>
                    <MenuItem mnemonicParsing="false" onAction="#quitAction" text="Quit"/>
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Analyses">
                <items>
                    <MenuItem mnemonicParsing="false" text="Manage Analyses"/>
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Methods">
                <items>
                    <MenuItem mnemonicParsing="false" text="View Current Method"/>
                    <Menu mnemonicParsing="false" text="New Method from ...">
                        <items>
                            <MenuItem mnemonicParsing="false" text="Current Method"/>
                            <MenuItem mnemonicParsing="false" text="Empty Method"/>
                        </items>
                    </Menu>
                    <Menu mnemonicParsing="false" text="Browse, Load, or Edit Method files">
                        <items>
                            <MenuItem mnemonicParsing="false" text="Tripoli Built-In Methods Library"/>
                        </items>
                    </Menu>
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Parameters">
                <items>
                    <MenuItem mnemonicParsing="false" text="Tracer Models"/>
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Resources">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#showPeriodicTable" text="Periodic Table"/>
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="About">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#showTripoliAbout" text="About Tripoli"/>
                    <MenuItem mnemonicParsing="false" onAction="#showTripoliGitHubRepo"
                              text="Tripoli GitHub Repository"/>
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#showTripoliContributeIssue"
                              text="Contribute an Issue on Github"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <AnchorPane fx:id="splashAnchor" prefHeight="673.0" prefWidth="900.0" style="-fx-background-color: #faf0e6;"
                VBox.vgrow="ALWAYS">
        <children>
            <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                        AnchorPane.topAnchor="0.0">
                <center>
                    <HBox alignment="CENTER" prefHeight="691.0" prefWidth="1234.0">
                        <children>
                            <VBox alignment="CENTER">
                                <children>
                                    <ImageView fitHeight="247.0" fitWidth="246.0" pickOnBounds="true"
                                               preserveRatio="true">
                                        <image>
                                            <Image url="@images/TripoliNoah2.png"/>
                                        </image>
                                    </ImageView>
                                    <Label alignment="CENTER" prefHeight="68.0" prefWidth="248.0"
                                           style="-fx-text-fill: black; -fx-font-size: 48; -fx-font-family: SansSerif;"
                                           text="Tripoli" textFill="#fffdfd"/>
                                    <Label fx:id="versionLabel" alignment="CENTER" layoutX="10.0" layoutY="256.0"
                                           prefHeight="35.0" prefWidth="248.0"
                                           style="-fx-text-fill: black; -fx-font-size: 24; -fx-font-family: SansSerif;"
                                           text="v1.0.0.0" textFill="#fffdfd"/>
                                    <Label fx:id="versionBuildDate" alignment="CENTER" layoutX="10.0" layoutY="414.0"
                                           prefHeight="24.0" prefWidth="248.0"
                                           style="-fx-text-fill: black; -fx-font-size: 16; -fx-font-family: SansSerif;"
                                           text="build date" textFill="#fffdfd"/>
                                </children>
                                <opaqueInsets>
                                    <Insets/>
                                </opaqueInsets>
                                <HBox.margin>
                                    <Insets/>
                                </HBox.margin>
                            </VBox>
                        </children>
                    </HBox>
                </center>
            </BorderPane>
        </children>
    </AnchorPane>
</VBox>