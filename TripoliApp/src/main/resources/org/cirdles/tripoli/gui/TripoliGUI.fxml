<VBox prefHeight="725.0" prefWidth="1250.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cirdles.tripoli.gui.TripoliGUIController">
   <MenuBar prefHeight="17.0" prefWidth="1234.0" VBox.vgrow="NEVER">
     <menus>
       <Menu mnemonicParsing="false" text="Project">
         <items>
           <MenuItem mnemonicParsing="false" text="Manage Project" />
               <SeparatorMenuItem mnemonicParsing="false" />
               <MenuItem mnemonicParsing="false" text="New Project" />
               <SeparatorMenuItem mnemonicParsing="false" />
               <MenuItem mnemonicParsing="false" text="Open Project" />
               <MenuItem mnemonicParsing="false" text="Open Recent Project" />
               <MenuItem mnemonicParsing="false" text="Open Demonstration Project" />
               <SeparatorMenuItem mnemonicParsing="false" />
               <MenuItem mnemonicParsing="false" text="Save  Project" />
               <MenuItem mnemonicParsing="false" text="Save  Project as ..." />
               <SeparatorMenuItem mnemonicParsing="false" />
               <MenuItem mnemonicParsing="false" text="Close  Project" />
               <SeparatorMenuItem mnemonicParsing="false" />
               <MenuItem mnemonicParsing="false" text="Quit" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="Data">
         <items>
           <MenuItem mnemonicParsing="false" text="Load Raw Data from Mass Spec" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="Help">
         <items>
           <MenuItem mnemonicParsing="false" onAction="#showTripoliAbout" text="About" />
         </items>
       </Menu>
     </menus>
   </MenuBar>
   <AnchorPane prefHeight="673.0" prefWidth="900.0" style="-fx-background-color: #faf0e6;" VBox.vgrow="ALWAYS">
      <children>
         <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <center>
               <HBox alignment="CENTER" prefHeight="691.0" prefWidth="1234.0">
                  <children>
                     <VBox alignment="CENTER">
                        <children>
                           <ImageView fitHeight="247.0" fitWidth="246.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                 <Image url="@images/Tripoli2009.png" />
                              </image>
                           </ImageView>
                           <Label alignment="CENTER" prefHeight="68.0" prefWidth="248.0" style="-fx-text-fill: black; -fx-font-size: 48; -fx-font-family: SansSerif;" text="Tripoli" textFill="#fffdfd" />
                           <Label fx:id="versionLabel" alignment="CENTER" layoutX="10.0" layoutY="256.0" prefHeight="35.0" prefWidth="248.0" style="-fx-text-fill: black; -fx-font-size: 24; -fx-font-family: SansSerif;" text="v1.0.0.0" textFill="#fffdfd" />
                           <Label fx:id="versionBuildDate" alignment="CENTER" layoutX="10.0" layoutY="414.0" prefHeight="24.0" prefWidth="248.0" style="-fx-text-fill: black; -fx-font-size: 16; -fx-font-family: SansSerif;" text="build date" textFill="#fffdfd" />
                        </children>
                        <opaqueInsets>
                           <Insets />
                        </opaqueInsets>
                        <HBox.margin>
                           <Insets />
                        </HBox.margin>
                     </VBox>
                  </children>
               </HBox>
            </center>
         </BorderPane>
      </children>
   </AnchorPane>
