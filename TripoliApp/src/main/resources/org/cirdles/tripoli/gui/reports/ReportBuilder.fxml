<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="650.0" prefWidth="875.0" style="-fx-background-color: LINEN;" stylesheets="@../css/report.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.cirdles.tripoli.gui.reports.ReportBuilderController">
       <!-- Menu Bar -->
       <HBox alignment="CENTER_LEFT" minHeight="-Infinity" styleClass="menu-bar" VBox.vgrow="NEVER">
           <opaqueInsets>
               <Insets />
           </opaqueInsets>
           <padding>
               <Insets left="20.0" />
           </padding>
           <MenuButton minWidth="63.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="63.0" text="New">
               <items>
                   <MenuItem fx:id="newBlankButton" onAction="#newOnAction" text="Report from Blank" />
                   <MenuItem fx:id="newFullButton" onAction="#newOnAction" text="Report from Full" />
               </items>
           </MenuButton>
           <Button fx:id="saveButton" minWidth="62.0" mnemonicParsing="false" onAction="#saveOnAction" prefHeight="25.0" prefWidth="62.0" text="Save" HBox.hgrow="ALWAYS">
               <HBox.margin>
                   <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
           </Button>
           <Button fx:id="restoreButton" minWidth="68.0" mnemonicParsing="false" onAction="#restoreOnAction" prefHeight="25.0" prefWidth="103.0" text="Cancel Changes" HBox.hgrow="ALWAYS">
               <HBox.margin>
                   <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
           </Button>
           <Button fx:id="renameButton" minWidth="65.0" mnemonicParsing="false" onAction="#renameOnAction" prefHeight="25.0" prefWidth="65.0" text="Rename">
               <HBox.margin>
                   <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
           </Button>
           <Button fx:id="deleteButton" minWidth="67.0" mnemonicParsing="false" onAction="#deleteOnAction" prefHeight="25.0" prefWidth="67.0" text="Delete" HBox.hgrow="ALWAYS">
               <HBox.margin>
                   <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
           </Button>
           <Button fx:id="generateButton" minWidth="75.0" mnemonicParsing="false" onAction="#generateOnAction" prefHeight="25.0" prefWidth="89.0" text="Generate" HBox.hgrow="ALWAYS">
               <padding>
                   <Insets left="20.0" right="20.0" />
               </padding>
               <HBox.margin>
                   <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
           </Button>
       </HBox>
       <SplitPane dividerPositions="0.6834285714285714" nodeOrientation="RIGHT_TO_LEFT" prefHeight="539.0" prefWidth="860.0" VBox.vgrow="SOMETIMES">
           <SplitPane dividerPositions="0.425531914893617" maxHeight="1.7976931348623157E308" minWidth="-Infinity" nodeOrientation="LEFT_TO_RIGHT" orientation="VERTICAL" prefHeight="586.0" prefWidth="604.0" VBox.vgrow="SOMETIMES">
               <TitledPane animated="false" collapsible="false" maxHeight="1.7976931348623157E308" prefHeight="242.0" prefWidth="689.0" styleClass="list-view-container" text="Categories - Drag and Drop to reorder" VBox.vgrow="ALWAYS">
                   <VBox prefHeight="216.0" prefWidth="726.0" VBox.vgrow="SOMETIMES">
                       <HBox alignment="CENTER_LEFT" maxHeight="700.0" prefHeight="31.0" prefWidth="542.0" VBox.vgrow="NEVER">
                           <children>
                               <TextField fx:id="categoryTextField" prefHeight="27.0" prefWidth="411.0" promptText="Type a new category name here, then click &quot;Create Category&quot;" styleClass="category-text-field" HBox.hgrow="ALWAYS" />
                               <Button fx:id="createCategoryButton" mnemonicParsing="false" onAction="#createCategoryOnAction" prefHeight="30.0" prefWidth="136.0" text="Create Category" />
                           </children>
                           <opaqueInsets>
                               <Insets />
                           </opaqueInsets>
                       </HBox>
                       <ListView fx:id="categoryListView" prefHeight="165.0" prefWidth="637.0" styleClass="list-view-content" VBox.vgrow="ALWAYS" />
                   </VBox>
               </TitledPane>
               <TitledPane animated="false" collapsible="false" maxHeight="1.7976931348623157E308" prefHeight="296.0" prefWidth="595.0" styleClass="list-view-container" text="Columns - Drag and Drop to reorder" VBox.vgrow="ALWAYS">
                   <VBox prefWidth="731.0" VBox.vgrow="SOMETIMES">
                       <ListView fx:id="columnListView" prefHeight="342.0" prefWidth="711.0" styleClass="list-view-content" VBox.vgrow="ALWAYS" />
                   </VBox>
               </TitledPane>
           </SplitPane>
     <VBox nodeOrientation="LEFT_TO_RIGHT" prefHeight="537.0" prefWidth="300" SplitPane.resizableWithParent="false" VBox.vgrow="SOMETIMES">
        <children>
           <Accordion fx:id="columnAccordion" minWidth="200" VBox.vgrow="ALWAYS" />
        </children></VBox>
       </SplitPane>
</VBox>
